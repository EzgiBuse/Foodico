@model LoginRequestDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
    @Html.Partial("_HeadPartialView")
<body>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-image: url('/cake-main/img/hero/hero-1.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center center; /* Center the background image */
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .login-container {
            margin-top: 100px;
            background-color: rgba(255, 255, 255, 0.8);
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 5px;
        }

        .btn-login {
            background-color: #FF7518; 
            color: #ffffff;
            border-radius: 5px;
            padding: 10px 20px;
            font-weight: bold;
        }

    </style>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="login-container">
                    <h2 class="text-center">Login</h2>
                    <form asp-controller="Login" asp-action="LoginUser" method="post">
                        <div class="form-group">
                            <input asp-for="Email" class="form-control" placeholder="Email">
                            <span asp-validation-for="Email" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control" placeholder="Password">
                            <span asp-validation-for="Password" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-login btn-success">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    </body>

</html>
